{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "types": ["./worker-configuration.d.ts"],
    "jsx": "react-jsx",
    // shadcn requirements
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }

  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.d.ts", "../lib/puzzle/src/index.ts"],
}
